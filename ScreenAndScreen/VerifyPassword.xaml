<Window x:Class="ScreenAndScreen.VerifyPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenAndScreen"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="输入密码" Height="200" Width="300">
    <StackPanel  Margin="20 0">
        <PasswordBox Margin="0 10" FontSize="28" Padding="0" Height="40"  Name="Pas"></PasswordBox>
        <StackPanel Orientation="Horizontal">
            <Button VerticalAlignment="Center" Click="Verify" Width="60" Height="40">解锁屏幕</Button>
            <TextBlock VerticalAlignment="Center" FontSize="20" Foreground="Red" Margin="10" Name="Tip"></TextBlock>
        </StackPanel>
    </StackPanel>
</Window>
